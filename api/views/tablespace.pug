extends layout
block content
  #display.w3-card-4.modal.w3-animate-top(style=" width:100%; height=100%; overflow: auto; ")
      .w3-container.w3-blue-grey
          h2.w3-center Administração e Exploração de Bases de Dados
            a(href='/tablespaces').button.w3-button.w3-left.w3-grey.w3-round-xxlarge.w3-text-white(style="padding: 2px 10px;") Anterior
            a(href='/').button.w3-button.w3-right.w3-grey.w3-round-xxlarge.w3-text-white(style="padding: 2px 10px;") Página Inicial
  h4.w3-center API para Monitorização de uma Base de Dados Oracle
    .w3-container.w3-blue-grey.w3-border
      h3.w3-center.w3-bold <b>Dados do Tablespace "#{tablespace[0].NOME}"</b>  
    .w3-container.w3-blue-grey.w3-border.w3-center
    table.w3-table.w3-bordered
        tr
          th.w3-center ID Tablespaces
          th.w3-center NOME
          th.w3-center Max Size
          th.w3-center Free Size
          th.w3-center Used Size
          th.w3-center Status
          th.w3-center Tipo
          th.w3-center Timestamp
        each t in tablespace
            tr
                td.w3-center #{t.IDTABLESPACES}
                td.w3-center #{t.NOME}
                td.w3-center #{t.MAX_SIZE}
                td.w3-center #{t.FREE_SIZE}
                td.w3-center #{t.USED_SIZE}
                td.w3-center #{t.STATUS}
                td.w3-center #{t.TIPO}
                td.w3-center #{t.Timestamp}
      footer.w3-large.w3-theme-d1
        address
            b Feito por Grupo 4 - AEBD
            br
            <img src="/images/1.png" alt="logo uminho" width="100" height="90">